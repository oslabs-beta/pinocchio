{
  "name": "pinocchio",
  "version": "1.0.0",
  "description": "A GUI for Puppeteer Test Creation",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/pinocchio.git"
  },
  "bugs": {
    "url": "https://github.com/oslabs-beta/pinocchio/issues"
  },
  "homepage": "https://github.com/oslabs-beta/pinocchio#readme",
  "scripts": {
    "dev:electron": "cross-env NODE_ENV=development concurrently \"webpack --config webpack.electron.config.js --mode development\" \"electron .\"",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack.react.config.js --mode development",
    "dev": " concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "prod:electron": "cross-env NODE_ENV=production webpack --config webpack.electron.config.js --mode production && electron .",
    "prod:react": "cross-env NODE_ENV=production webpack --config webpack.react.config.js --mode production",
    "prod": "npm run prod:react && npm run prod:electron",
    "deploy": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "Electron",
    "Puppeteer",
    "testing",
    "Mocha",
    "Chai"
  ],
  "author": "Team Geppetto",
  "contributors": [
    "Adam Joesten",
    "Alexander Choi",
    "Brandi Richardson",
    "Giao Tran",
    "Harlan Evans"
  ],
  "license": "MIT",
  "build": {
    "extends": null,
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "productName": "pinocchio",
    "appId": "com.electron.pinocchio",
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": "./assets/icon.icns",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 340,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Team Gepetto"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "electron": "8.2.2",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^3.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.2.0",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^7.1.1",
    "ts-loader": "^8.0.14",
    "url-loader": "^4.1.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "concurrently": "^5.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-webpack": "^2.7.4",
    "html-webpack-plugin": "^4.5.1",
    "jest": "^26.6.0",
    "monaco-editor": "^0.21.2",
    "monaco-editor-electron": "^1.0.6",
    "monaco-editor-webpack-plugin": "^2.1.0",
    "node-sass": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-monaco-editor": "^0.41.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "react-toastify": "^7.0.2",
    "styled-components": "^5.2.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss|svg)$": "babel-jest"
    }
  }
}
